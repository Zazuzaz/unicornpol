<table>
    <tr>
      <td><%= @product.name %></td>
      <td><%= @product.description %></td>
      <td><%= @product.suggested_price %></td>
      <td><%= @product.merchantprofile_id %></td>
    </tr>
</table>

<%= form_with scope: :offer, url: create_offer_path, local: true do |form| %>
  <p>
    <%= form.label :product_id %><br>
    <%= form.text_field :product_id %>
  </p>

  <p>
    <%= form.label :suggested_price %><br>
    <%= form.text_field :suggested_price %>
  </p>
 
  <p>
    <%= form.label :customer_id %><br>
    <%= form.text_field :customer_id %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', product_path(product) %>