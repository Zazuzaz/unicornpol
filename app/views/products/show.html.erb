<h2>Add offer:</h2>
<%= form_with(model: [ @product, @product.offer.build ], local: true) do |form| %>
	
	<%= form.hidden_field :description, value: "offer description" %>
	<%= form.hidden_field :title, value: "offer title" %>
	<%= form.hidden_field :status, value: "proposed" %>
	<%= form.hidden_field :product_id, value: @product.product_id %>
	<%= form.hidden_field :customer_id, value: Customer.last.id %>

  <p>
    <%= form.label :suggested_price %><br>
    <%= form.text_field :suggested_price %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

