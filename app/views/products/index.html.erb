<!doctype html>
<html>
  <head>
    <title>Unicornpol</title>
    <meta charset="UTF-8" />
    <link type="text/css"; rel="stylesheet" href="stylesheet.css" />
  </head>
  <body>
    <div>
      <h1>Unicornpol</h1>
    </div>
      <%= link_to("Add new product", new_product_path) %>
<br><br>
    <table>
      <th colspan="3">LISTA PRODUKTÓW</th>
      <% @product.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to(product.name, product_path(product)) %></td>
        <td colspan="2"><%= product.description %></td>
        <td><%= product.merchantprofile.name %></td>
        <td><%= product.suggested_price %>_pln</td>
        <td><%= link_to("Edit", edit_product_path(product)) %></td>
      </tr>
      <% end %>
    </table>
    <br><br>
    <div>
      <p>Copyright © 2018 team bee. Wszelkie prawa zastrzeżone.</p>
    </div>
  </body>
</html>