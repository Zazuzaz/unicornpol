<!doctype html>
<html>
  <head>
    <title>Unicornpol</title>
    <meta charset="UTF-8" />
    <link type="text/css"; rel="stylesheet" href="stylesheet.css" />
  </head>
  <body>
    <div id="header">
      <h1>Unicornpol</h1>
    </div>

    <div id="login">
    </div>

    <div id="menu">
      miejsce na menu
    </div>

    <div id="list">
      <table width="1000px">
          <th colspan="3">LISTA PRODUKTÓW</th>
          <tr>
            <td>
              <% for product in @products %>
              <table id="produkt"; cellpadding="15">
                  <tr><td id="nazwa"><%= link_to(product.name, product_path(product)) %></td></tr>
                  <tr><td id="nazwa"><%= product.description %></td></tr>
                  <tr><td><%= product.suggested_price %></td></tr>
                <% end %>
              </table>
            </td>
          </tr>
      </table>
    </div>
    <div id="footer">
      <h4>Copyright © 2018 team bee. Wszelkie prawa zastrzeżone.</h4>
    </div>

  </body>
</html>
